<p id="notice"><%= notice %></p>

<h1>Pets</h1>

<table class="table table-dark">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Race</th>
      <th>Birthdate</th>
      <th>Visitas</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
    <tr>
      <td><%= pet.name %></td>
      <td><%= pet.race %></td>
      <td><%= pet.birthdate %></td>
      <td><%= pet.history_count%></td>
      <% pet.pet_histories.each do |history| %>
      <td><%= history.description %></td>
      <% end %>
      <td><%= link_to 'Show', pet %></td>
      <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
      <td>
        <%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you
        sure?' } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br />

<span>
  <%= link_to 'New Pet', new_pet_path, class: "btn btn-primary text-light" %>
</span>
<span>
  <%= link_to 'Pet Histories', pet_histories_path, class: "btn btn-primary
  text-light" %>
</span>
